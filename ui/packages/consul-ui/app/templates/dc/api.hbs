<Route @name={{routeName}} as |route|>
  <div class='display-flex-container' style='margin: 0px;'>
    <span class='po-breadcrumb display-flex-container'>
      <a class='po-breadcrumb-link' data-test-back href={{model.linkTo}}>
        <FlightIcon @name='chevron-left' />
        All APIs</a>
    </span>

    <h5 class='powered-by'>
      Powered by
      <a class='powered-by-link' href='https://protectonce.com/' target='_blank'>
        <img src='/ui/assets/images/poLogoFull.svg' class='protectonce-logo' alt="protectonce"/>
      </a>
    </h5>
  </div>
  <span class='display-flex-container'>
    <h1 class='api-insights-title'>{{model.method}}&nbsp;{{model.name}}</h1>
  </span>
  <h1>
    <route.Title @title={{title}} />
  </h1>
  <TabNav
    @items={{compact
      (array
        (hash label='Schema' href='dc.api.schema' selected=(is-href 'dc.api.schema'))
        (hash label='Posture' href='dc.api.posture' selected=(is-href 'dc.api.posture'))
      )
    }}
  />
  <Outlet @name={{routeName}} as |o|>
    {{outlet}}
  </Outlet>
</Route>